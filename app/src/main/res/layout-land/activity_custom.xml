<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1B26">

    <TextView
        android:id="@+id/title_perso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PERSONNALISE TON HÃ‰ROS"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/line_separator"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="#414868"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/title_perso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/line_separator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TON PSEUDO"
                android:textColor="#81A1C1"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>
            <EditText
                android:id="@+id/input_pseudo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#24283B"
                android:textColor="#FFFFFF"
                android:hint="Ex: GuerrierDu77"
                android:textColorHint="#565F89"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COULEUR DE L'AURA"
                android:textColor="#81A1C1"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="5"
                android:rowCount="2"
                android:layout_marginBottom="16dp"
                android:alignmentMode="alignBounds">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/color_red"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="#E74C3C"
                    app:strokeWidth="3dp"
                    app:strokeColor="#FFFFFF" /> <com.google.android.material.button.MaterialButton
                android:id="@+id/color_blue"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                app:cornerRadius="20dp"
                app:backgroundTint="#3498DB" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/color_green"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="#2ECC71" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/color_yellow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="#F1C40F" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/color_purple"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="#9B59B6" />

            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COUVRE-CHEF"
                android:textColor="#81A1C1"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#24283B"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btn_prev_hat"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:src="@android:drawable/ic_media_previous"
                    app:tint="#81A1C1" />

                <TextView
                    android:id="@+id/text_current_hat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ‘‘ Couronne en Or"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <ImageButton
                    android:id="@+id/btn_next_hat"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:src="@android:drawable/ic_media_next"
                    app:tint="#81A1C1" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/preview_box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#24283B"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/line_separator"
        app:layout_constraintBottom_toTopOf="@id/btn_rejoindre_arene"
        app:layout_constraintStart_toEndOf="@id/guideline_center"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APERÃ‡U (VUE DE DESSUS)"
            android:textColor="#565F89"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/image_preview_character"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@android:drawable/ic_menu_myplaces"
            app:tint="#E74C3C"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_rejoindre_arene"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:text="REJOINDRE L'ARÃˆNE"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:backgroundTint="#52B766"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_center"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>