<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/title_choix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOISIS TA CLASSE"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintTop_toBottomOf="@id/title_choix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_guerrier"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:text="Guerrier"
            app:backgroundTint="@color/class_guerrier"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_mage"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:text="Mage"
            app:backgroundTint="@color/class_mage"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_soigneur"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:text="Soigneur"
            app:backgroundTint="@color/class_soigneur"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_tank"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:text="Tank"
            app:backgroundTint="@color/class_tank"
            app:cornerRadius="12dp" />

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>