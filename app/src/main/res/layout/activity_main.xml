<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/healthBarContainer"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#4CAF50"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/dpadCenter"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginStart="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnUp"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#555555"
        android:text="▲"
        app:layout_constraintBottom_toTopOf="@+id/dpadCenter"
        app:layout_constraintEnd_toEndOf="@+id/dpadCenter"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/dpadCenter" />

    <Button
        android:id="@+id/btnLeft"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="#555555"
        android:text="◀"
        app:layout_constraintBottom_toBottomOf="@+id/dpadCenter"
        app:layout_constraintEnd_toStartOf="@+id/dpadCenter"
        app:layout_constraintTop_toTopOf="@+id/dpadCenter"
        app:layout_constraintVertical_bias="0.481" />

    <Button
        android:id="@+id/btnRight"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#555555"
        android:text="▶"
        app:layout_constraintBottom_toBottomOf="@+id/dpadCenter"
        app:layout_constraintStart_toEndOf="@+id/dpadCenter"
        app:layout_constraintTop_toTopOf="@+id/dpadCenter"
        app:layout_constraintVertical_bias="0.481" />

    <Button
        android:id="@+id/btnDown"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#555555"
        android:text="▼"
        app:layout_constraintEnd_toEndOf="@+id/dpadCenter"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/dpadCenter"
        app:layout_constraintTop_toBottomOf="@+id/dpadCenter" />

    <com.example.manettetel.JoystickView
        android:id="@+id/joystickLeft"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="240dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.example.manettetel.JoystickView
        android:id="@+id/joystickRight"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="440dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/actionCenter"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnY"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Y"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000066"
        app:cornerRadius="30dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/actionCenter"
        app:layout_constraintStart_toStartOf="@+id/actionCenter"
        app:layout_constraintEnd_toEndOf="@+id/actionCenter"/>

    <Button
        android:id="@+id/btnB"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="B"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000066"
        app:cornerRadius="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/actionCenter"
        app:layout_constraintStart_toStartOf="@+id/actionCenter"
        app:layout_constraintEnd_toEndOf="@+id/actionCenter"/>

    <Button
        android:id="@+id/btnX"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="X"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000066"
        app:cornerRadius="30dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/actionCenter"
        app:layout_constraintTop_toTopOf="@+id/actionCenter"
        app:layout_constraintBottom_toBottomOf="@+id/actionCenter"/>

    <Button
        android:id="@+id/btnA"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="A"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000066"
        app:cornerRadius="30dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@+id/actionCenter"
        app:layout_constraintTop_toTopOf="@+id/actionCenter"
        app:layout_constraintBottom_toBottomOf="@+id/actionCenter"/>
</androidx.constraintlayout.widget.ConstraintLayout>